// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(uuid())
  name          String
  email         String   @unique
  refresh_token String
  access_token  String
  expires_at    Int
  created_at    DateTime @default(now())
  updated_at    DateTime @updatedAt

  @@map("users")
}

model Schedule {
  id         String   @id @default(uuid())
  day        String
  hour_start String
  hour_end   String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model Service {
  id                          String   @id @default(uuid())
  name                        String
  time_executation_in_minutes Int
  created_at                  DateTime @default(now())
  updated_at                  DateTime @updatedAt

  @@map("services")
}
